<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/errorTexr"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainConcejosActivity">

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/nin" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="410dp"
        android:layout_height="67dp"
        android:background="@android:color/holo_blue_light"
        android:fontFamily="sans-serif-medium"
        android:text="Concejos"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="342dp"
        android:layout_height="236dp"
        android:layout_marginTop="24dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.623"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6">

        <VideoView
            android:id="@+id/videoView0"
            android:layout_width="342dp"
            android:layout_height="125dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="match_parent"
            android:layout_height="81dp"
            android:layout_marginTop="8dp"
            app:srcCompat="@drawable/doli" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="305dp"
        android:layout_height="203dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/imageView9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.567"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout5"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/textView7"
            android:layout_marginTop="10dp"
            android:layout_width="303dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-smallcaps"
            android:text="En EcoRecicla, accede al menú y selecciona 'Registra tu reciclaje' para indicar el tipo de material que deseas reciclar, incluyendo vidrio, plástico, cartón o papel. La app procederá a registrar tu reciclaje y calculará el valor correspondiente, nuestro granito de arena es muy importante para este hermoso Planeta."
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>